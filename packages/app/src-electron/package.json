{
  "name": "spatialshot",
  "version": "1.0.0",
  "description": "Main application for rendering AI and contextual analysis module.",
  "homepage": "https://github.com/a7mddra/spatialshot",
  "author": "a7mddra <a7mddra@gmail.com>",
  "license": "Apache-2.0",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.a7mddra.spatialshot",
    "productName": "Spatialshot",
    "directories": {
      "output": "../release" 
    },
    "files": [
      "**/*",
      {
        "from": "../dist", 
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "asar": false,
    "icon": "assets/icons/light/512.png",
    
    "win": {
      "target": "zip",
      "icon": "assets/icons/light/512.png",
      "artifactName": "spatialshot-app-win-${arch}.${ext}"
    },
    "linux": {
      "target": "zip",
      "icon": "assets/icons/light/512.png",
      "artifactName": "spatialshot-app-linux-${arch}.${ext}",
      "category": "Utility"
    },
    "mac": {
      "target": "zip",
      "icon": "assets/icons/light/512.png",
      "artifactName": "spatialshot-app-mac-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "We need to control the screen capture process."
      }
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-clipboard-watcher": "^1.0.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^166.0.0",
    "open": "^11.0.0"
  }
}
