{
  "name": "aimode",
  "version": "1.0.0",
  "description": "AIMode tab for SpatialShot.",
  "main": "source/main.js",
  "author": "a7mddra <a7mddra@gmail.com>",
  "license": "GPL-3.0",
  "homepage": "https://github.com/a7mddra/spatialshot",
  "scripts": {
    "start": "XMODIFIERS=@im=null electron .",
    "dev": "vite",
    "dev:electron": "vite build && electron .",
    "build": "tsc && vite build && electron-builder"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "clsx": "^2.0.0",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.0.0"
  },
  "build": {
    "appId": "com.a7mddra.aimode",
    "productName": "AIMode",
    "asar": true,
    "files": [
      "dist/**/*",
      "source/**/*",
      "package.json",
      "config.private.json"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
